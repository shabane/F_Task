<Window x:Class="F_Task.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:F_Task" 
        mc:Ignorable="d"
        Title="MainWindow" Height="501.4" Width="523.2" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Grid Background="#313131" Margin="0,0,0,-0.012">
        <!--Search Box-->
        <TextBox  x:Name="TXTSearch" VerticalContentAlignment="Center" CaretBrush="#FFF" FontSize="25" Foreground="#FFF" BorderBrush="#48C9B0" Background="Transparent" Height="40" Margin="10,10,10,0" VerticalAlignment="Top" TextChanged="TXTSearch_TextChanged"/>

        <Label FontSize="14" Foreground="#FFF" Content="Name / PID" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Height="35" BorderThickness="0.5" BorderBrush="#F7DC6F" Margin="10,55,10,0" VerticalAlignment="Top"/>
        
        <!--Show The Tasks-->
        <ListBox  HorizontalContentAlignment="Center" BorderBrush="#008080" Foreground="#FFFFFF" Background="Transparent" x:Name="LstShow" Margin="10,95,10,10" FontSize="15">
            <ListBox.ContextMenu>
                <ContextMenu>
                    <MenuItem Header=">_ Force Kill" Click="ForceKill"/>
                    <MenuItem Header=">_ Kill" Click="Kill"/>
                    <MenuItem Header="Kill All Proc With This Name" Click="LKbyName"/>
                    <MenuItem Header="Refresh List" Click="RefreshLST"/>

                </ContextMenu>
            </ListBox.ContextMenu>
        </ListBox>

    </Grid>
</Window>
